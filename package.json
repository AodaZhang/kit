{
  "name": "@aodazhang/kit",
  "private": false,
  "version": "0.1.7",
  "license": "MIT",
  "description": "A Lightweight JavaScript Library",
  "keywords": [
    "javascript",
    "library",
    "utils",
    "kit"
  ],
  "author": "AodaZhang <zhangxinyu1989@foxmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/AodaZhang/kit"
  },
  "files": [
    "dist/types/src",
    "dist/*.js"
  ],
  "main": "dist/kit.umd.js",
  "module": "dist/kit.es.js",
  "typings": "dist/types/src/index.d.ts",
  "scripts": {
    "dev": "webpack-dev-server --config ./webpack.config.js",
    "build": "rimraf dist && tsc && rollup --config ./rollup.config.js",
    "build:all": "rimraf dist coverage && npm run lint:fix && npm run test:coverage && tsc && rollup --config ./rollup.config.js",
    "test:watch": "jest --watchAll",
    "test:coverage": "jest --coverage",
    "lint:fix": "eslint --fix src/**/*.{ts,tsx,js,jsx}",
    "commit": "git-cz",
    "changelog": "npm --no-git-tag-version version 0.1.7 && conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "prepublish": "npm run build:all"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-typescript": "^7.12.7",
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@types/crypto-js": "^4.0.1",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "babel-loader": "^8.2.2",
    "clean-webpack-plugin": "^3.0.0",
    "commitizen": "^4.2.3",
    "conventional-changelog-cli": "^2.1.1",
    "core-js": "^3.8.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.15.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "html-webpack-plugin": "^4.5.0",
    "husky": "^4.3.5",
    "jest": "^26.6.3",
    "jest-transform-stub": "^2.0.0",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "rollup": "^2.38.4",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-json": "^4.0.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-typescript2": "^0.29.0",
    "typescript": "^4.1.2",
    "webpack": "4.44.2",
    "webpack-cli": "3.3.12",
    "webpack-dev-server": "^3.11.0"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "crypto-js": "^4.0.0"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{ts,tsx,js,jsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
